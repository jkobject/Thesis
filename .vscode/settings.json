{
  "latex-workshop.latex.autoBuild.interval": 600,
  "latex-workshop.latex.recipe.default": "latexmk (lualatex)",
  "latex-workshop.latex.rootFile.useSubFile": true,
  "latex-workshop.latex.rootFile.doNotPrompt": true,
  "latex-workshop.latex.build.rootfileInStatus": true,
  "latex-workshop.latex.build.forceRecipeUsage": false,
  "latex-workshop.latex.tools": [
    {
      //latexmk -synctex=1 -interaction=nonstopmode -file-line-error -lualatex -f -shell-escape -outdir=build %DOC%
      "name": "latexmk",
      "command": "latexmk",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-lualatex",
        "-f",
        "-shell-escape",
        "-outdir=build",
        "%DOC%"
      ]
    },
    {
      "name": "pandoc",
      "command": "pandoc",
      "args": [
        "%DOCFILE%",
        "-f",
        "markdown",
        "-t",
        "latex",
        "--template=templates/thesis-template.tex",
        "--pdf-engine=lualatex",
        "--bibliography=bibliography.bib",
        "--citeproc",
        "-o",
        "%DOCFILE_EXT%.tex"
      ]
    }
  ],
  "latex-workshop.latex.recipes": [
    {
      "name": "latexmk (lualatex)",
      "tools": ["latexmk"]
    }
  ],
  "latex-workshop.latex.clean.fileTypes": [
    "*.aux",
    "*.bbl",
    "*.blg",
    "*.idx",
    "*.ind",
    "*.lof",
    "*.lot",
    "*.out",
    "*.toc",
    "*.acn",
    "*.acr",
    "*.alg",
    "*.glg",
    "*.glo",
    "*.gls",
    "*.ist",
    "*.fls",
    "*.log",
    "*.fdb_latexmk",
    "*.snm",
    "*.nav",
    "*.dvi",
    "*.synctex.gz"
  ],
  "latex-workshop.latex.autoClean.run": "onBuilt"
}
