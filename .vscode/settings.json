{
  "latex-workshop.latex.autoBuild.run": "onSave",
  "latex-workshop.latex.autoBuild.interval": 0,
  "latex-workshop.latex.recipe.default": "latexmk (lualatex)",
  "latex-workshop.latex.tools": [
    {
      "name": "latexmk",
      "command": "latexmk",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-lualatex",
        "-f",
        "-shell-escape",
        "%DOC%"
      ]
    },
    {
      "name": "pandoc",
      "command": "pandoc",
      "args": [
        "%DOCFILE%",
        "-f",
        "markdown",
        "-t",
        "latex",
        "--template=templates/thesis-template.tex",
        "--pdf-engine=lualatex",
        "--bibliography=biblio.bib",
        "--citeproc",
        "-o",
        "%DOCFILE_EXT%.tex"
      ]
    }
  ],
  "latex-workshop.latex.recipes": [
    {
      "name": "latexmk (lualatex)",
      "tools": ["latexmk"]
    },
    {
      "name": "pandoc + latexmk",
      "tools": ["pandoc", "latexmk"]
    }
  ],
  "latex-workshop.latex.clean.fileTypes": [
    "*.aux",
    "*.bbl",
    "*.blg",
    "*.idx",
    "*.ind",
    "*.lof",
    "*.lot",
    "*.out",
    "*.toc",
    "*.acn",
    "*.acr",
    "*.alg",
    "*.glg",
    "*.glo",
    "*.gls",
    "*.ist",
    "*.fls",
    "*.log",
    "*.fdb_latexmk",
    "*.snm",
    "*.nav",
    "*.dvi",
    "*.synctex.gz"
  ],
  "latex-workshop.latex.autoClean.run": "onFailed",
  "latex-workshop.formatting.latex": "latexindent",
  "latex-workshop.formatting.latexindent.path": "latexindent" // optionalâ€”full path if it isn't in PATH
}
